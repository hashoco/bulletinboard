
    <!doctype html>
    <html lang="en">
      <head>
        <link href="/public/main.css" rel="stylesheet">    
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">    
       
      </head>
      <body>
        <form  method="POST" name="frm">
        <div class="form signup">
            <div class="form-header">
              <div class="show-signup" >Sign Up</div>
              <div class="show-signin" >Sign In</div>
              <div class="show-reset"  >Reset</div>
            </div>
            <div class="arrow"></div>
            <div class="form-elements">
              <div class="form-element">  
             <input type="text" placeholder="Username" id="id" name="id">
              </div>
              <div class="form-element">
                <input type="password" placeholder="Password" id="pw" name="pw">
              </div>
              <div class="form-element">
                <input type="password" placeholder="Confirm password" id="pwchk" name ="pwchk" >
              </div>
              <div class="form-element">
                <button  id="submit-btn" onclick='return submit2(this.form);'>Sign Up</button>
              </div>
              <input type="text" value= "1"  name="gubun" id = "status-chk" >
            </div>
          </div>
        </form>
          <script src="/js/login.js" type="text/javascript" ></script>
          <script> 
            function submit2(frm) { 
              console.log(frm);
              if(frm.gubun.value =="2"){
                frm.action='/homepage'; 
            }else{
                frm.action='/regi'; 
            }
              
            frm.submit();
            } 
          </script> 
      </body>
    </html>